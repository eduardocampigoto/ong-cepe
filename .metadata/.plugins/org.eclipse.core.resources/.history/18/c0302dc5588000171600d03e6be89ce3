var items = document.getElementById('tipopessoa');

items.addEventListener('change', function(){
	var valor =	this.value // o valor que procuras Ã©: this.value

	if(valor == 1){
		
		alert('valor 1');
		$('#footer').load('formulario/pesfisica.html');

	}else if(valor == 2 ){
		
		alert('valor 2');
	}
});